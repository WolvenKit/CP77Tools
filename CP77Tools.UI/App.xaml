            <GradientStop Color="#FF28444D" Offset="0.511"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ButtonBackground_NewV2" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF09739B"/>
            <GradientStop Color="#FF206F8C" Offset="1"/>
            <GradientStop Color="#FFD1C60E" Offset="0.965"/>
            <GradientStop Color="#FFD1C60E" Offset="0.055"/>
